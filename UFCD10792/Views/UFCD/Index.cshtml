@model IEnumerable<UFCD>
@{
    ViewData["Title"] = "Index";
}

<h1>Index UFCD</h1>

<div class="container p-3"> 
    <div class="row pt-4">
        <div class="col-6">
            <h2>Lista de UFCD</h2>
        </div>
        <div class ="col-6 text-end">
            <a class="btn btn-primary" asp-controller="UFCD" asp-action="Create">Criar Nova UFCD</a>

        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Hours</th>
                <th>Beginning Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.code</td>
                    <td>@obj.name</td>
                    <td>@obj.hours</td>
                    <td>@obj.beginingDate</td>
                </tr>
            }
        </tbody>
    </table>

</div>